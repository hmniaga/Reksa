@model Reksa.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="col-md-4 col-md-offset-4">
    <div class=" card-box">
        <div class="panel-heading">
            <h3 class="text-center"> Sign In to <strong class="text-custom">ReksaDana</strong> </h3>
        </div>
        <div class="panel-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input asp-for="Username" class="form-control" type="text" placeholder="Username">
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-12">
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" class="form-control">
                            <span asp-validation-for="RememberMe"></span>
                            <label>
                                Remember me
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button class="btn btn-default btn-block text-uppercase waves-effect waves-light" type="submit" value="Login">Log In</button>
                    </div>
                </div>
                <div class="form-group m-t-30 m-b-0">
                    <div class="col-sm-12">
                        <a href="page-recoverpw.html" class="text-dark"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

 
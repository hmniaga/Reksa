@model Reksa.ViewModels.CustomerListViewModel


<div class="col-md-12">
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Client Code</label>
                            <div class="input-group">
                                @Html.Kendo().TextBoxFor(model => model.ClientModel.ClientCode).HtmlAttributes(new { @class = "form-control input-sm", @id = "OfficeId" }).Enable(true)

                                <span class="input-group-btn">
                                    <a href="@Url.Action("SearchClient", "Global")" data-toggle="modal" data-target="#ClientModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                                </span>

                                @Html.Kendo().TextBoxFor(model => model.ClientModel.ClientName).HtmlAttributes(new { @class = "form-control input-sm col-md-3", @id = "AgentDesc" }).Enable(false)
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Unit Blokir</label>
                            <div class="input-group">
                                @Html.Kendo().TextBox().Name("UnitBlokir").HtmlAttributes(new { @class = "form-control input-sm" }).Enable(true)
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tgl Blokir</label>
                            <div class="input-group">
                                @(Html.Kendo().DatePickerFor(model => model.BlokirModel.TanggalBlokir).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 100%;" }).Enable(false))
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Outstanding Unit</label>
                            <div class="input-group">
                                @Html.Kendo().TextBox().Name("UnutBlokir").HtmlAttributes(new { @class = "form-control input-sm", @id = "OfficeId" }).Enable(false)
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tgl Expiry Blokir</label>
                            <div class="input-group">
                                @(Html.Kendo().DatePickerFor(model => model.BlokirModel.TanggalExpiryBlokir).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 100%;" }).Enable(false))
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Jml Unit Blokir</label>
                            <div class="input-group">
                                @Html.Kendo().TextBox().Name("UnutBlokir").HtmlAttributes(new { @class = "form-control input-sm", @id = "OfficeId" }).Enable(false)
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    @(Html.Kendo().Grid(Model.CustomerBlokir)
                    .Name("GridBlokir")
                    .Columns(columns =>
                    {
                        columns.Bound(p => p.BlockId);
                        columns.Bound(p => p.Status);
                        columns.Bound(p => p.TanggalBlokir).Format("{0:dd MMMM yyyy}");
                        columns.Bound(p => p.TanggalExpiryBlokir).Format("{0:dd MMMM yyyy}");
                        columns.Bound(p => p.UnitBlokir).Format("{0:###,###.##}");
                        columns.Bound(p => p.Inputter);
                        columns.Bound(p => p.Supervisor); 
                    }).Pageable().Selectable()

    )
</div>

<div class="modal fade" id="ClientModal" tabindex="-1" role="dialog" aria-labelledby="ClientModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>



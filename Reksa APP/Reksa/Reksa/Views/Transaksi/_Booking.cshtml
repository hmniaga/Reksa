<script>
    function onRowViewBookSelect(e) {
        var data = this.dataItem(this.select());
        $("#NoTransaksiBook").val(data.NoTrx);
        $("#ProdCodeBook").val(data.KodeProduk);
        var DateTrx = new Date(data.TglTrx);
        $("#TglTransaksiBook").val(DateTrx.getDate() + '/' + (DateTrx.getMonth() + 1) + '/' + DateTrx.getFullYear());
        $("#ClientCodeBook").val(data.ClientCode);
        $("#CurrCodeBook").val(data.CCY);


        $('#FeeeditBook').prop('checked', data.EditFee);
        $('#PhoneOrderBook').prop('checked', data.PhoneOrder);

        var KodeProduk = data.KodeProduk;
        var ClientCode = data.ClientCode;
        var ProdId;

        $.ajax({
            type: 'GET',
            url: '/Global/ValidateProduct',
            data: { Col1: KodeProduk, Col2: '', Validate: 1 },
            success: function (data) {
                $("#ProdNameBook").val(data[0].ProdName);
                ProdId = data[0].ProdId;
                $.ajax({
                    type: 'GET',
                    url: '/Global/ValidateClient',
                    data: { Col1: ClientCode, Col2: '', Validate: 1, ProdId: ProdId },
                    success: function (data) {
                        $("#ClientNameBook").val(data[0].ClientName);
                    }
                });
            }
        });

        var dropdownlist = $("#JenisBook").data("kendoDropDownList");
        var intJenis = data.JenisFee;
        //By Nominal
        if (intJenis == 0) {
            dropdownlist.select(0);
            $("#FeeBook").val(data.NominalFee);
            $("#PercentageFeeBook").val(data.PctFee);
            //By %
        } else {
            dropdownlist.select(1);
            $("#FeeBook").val(data.PctFee);
            $("#PercentageFeeBook").val(data.NominalFee);
        }
    };


    function ValidateProdCodeBook() {
        var ProductCode = $("#ProdCodeBook").val();
        $.ajax({
            type: 'GET',
            url: '/Global/ValidateProduct',
            data: { Col1: ProductCode, Col2: '', Validate: 1 },
            success: function (data) {
                $("#ProdNameBook").val(data[0].ProdName);
                $("#ProdIdBook").val(data[0].ProdId);
            }
        });
    }
    function ValidateClientBook() {
        var ClientCode = $("#ClientCodeBook").val();
        var ProdId = $("#ProdIdBook").val();
        $.ajax({
            type: 'GET',
            url: '/Global/ValidateClient',
            data: { Col1: ClientCode, Col2: '', Validate: 1, ProdId: ProdId },
            success: function (data) {
                $("#ClientNameBook").val(data[0].ClientName);
            }
        });
    }



</script>

        <div class="input-group">
            @Html.Kendo().TextBoxFor(model => model.ReferentorModel.EMPLID).HtmlAttributes(new { @id = "ReferentorIdBook", @class = "form-control input-sm" }).Enable(false)

            <span class="input-group-btn">
                <a href="@Url.Action("SearchReferentor", "Global")" data-toggle="modal" data-target="#NIKRefBookModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
            </span>
            @Html.Kendo().TextBoxFor(model => model.ReferentorModel.NAME).HtmlAttributes(new { @id = "ReferentorNameBook", @class = "form-control input-sm" }).Enable(false)

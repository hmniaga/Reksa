<script>
    function onRowViewRedempSelect(e) {
        var data = this.dataItem(this.select());
        $("#NoTransaksiRedemp").val(data.NoTrx);
        $("#ProdCodeRedemp").val(data.KodeProduk);
        var DateTrx = new Date(data.TglTrx);
        $("#TglTransaksiRedemp").val(DateTrx.getDate() + '/' + (DateTrx.getMonth() + 1) + '/' + DateTrx.getFullYear());
        $("#ClientCodeRedemp").val(data.ClientCode);
        $("#CurrCodeRedemp").val(data.CCY);
        $("#OutstandingRedemp").val(data.OutstandingUnit);
        $("#JumlahUnitRedemp").val(data.RedempUnit);
        if (data.OutstandingUnit == data.RedempUnit) {
            $('#CheckAllRedemp').prop('checked', true);
        } else
        {
            $('#CheckAllRedemp').prop('checked', false);
        }
        
        $('#FeeeditRedemp').prop('checked', data.EditFee);
        $('#PhoneOrderRedemp').prop('checked', data.PhoneOrder);
        
        var KodeProduk = data.KodeProduk;
        var ClientCode = data.ClientCode;
        var ProdId;

        $.ajax({
            type: 'GET',
            url: '/Global/ValidateProduct',
            data: { Col1: KodeProduk, Col2: '', Validate: 1 },
            success: function (data) {
                $("#ProdNameRedemp").val(data[0].ProdName);
                ProdId = data[0].ProdId;
                $.ajax({
                    type: 'GET',
                    url: '/Global/ValidateClient',
                    data: { Col1: ClientCode, Col2: '', Validate: 1, ProdId: ProdId },
                    success: function (data) {
                        $("#ClientNameRedemp").val(data[0].ClientName);
                    }
                });
            }
        });

        var dropdownlist = $("#JenisRedemp").data("kendoDropDownList");
        var intJenis = data.JenisFee;
        //By Nominal
        if (intJenis == 0) {
            dropdownlist.select(0);
            $("#FeeRedemp").val(data.NominalFee);
            $("#PercentageFeeRedemp").val(data.PctFee);
            //By %
        } else {
            dropdownlist.select(1);
            $("#FeeRedemp").val(data.PctFee);
            $("#PercentageFeeRedemp").val(data.NominalFee);
        }
    };


    function ValidateProdCodeRedemp() {
        var ProductCode = $("#ProdCodeRedemp").val();
        $.ajax({
            type: 'GET',
            url: '/Global/ValidateProduct',
            data: { Col1: ProductCode, Col2: '', Validate: 1 },
            success: function (data) {
                $("#ProdNameRedemp").val(data[0].ProdName);
                $("#ProdIdRedemp").val(data[0].ProdId);
            }
        });
    }
    function ValidateClientRedemp() {
        var ClientCode = $("#ClientCodeRedemp").val();
        var ProdId = $("#ProdIdRedemp").val();
        $.ajax({
            type: 'GET',
            url: '/Global/ValidateClient',
            data: { Col1: ClientCode, Col2: '', Validate: 1, ProdId: ProdId },
            success: function (data) {
                $("#ClientNameRedemp").val(data[0].ClientName);
            }
        });
    }



</script>

@model Reksa.ViewModels.TransaksiListViewModel

<div class="col-md-12">
    <div class="card-box">
        <div class="row">
            <div class="col-md-6">
                <!-- Begin Search Office -->
                <div class="form-group">
                    <label class="col-sm-3 control-label">Kode Kantor</label>
                    <div class="input-group">
                        @Html.Kendo().TextBoxFor(model => model.OfficeModel.OfficeId).HtmlAttributes(new { @id = "srcOfficeRedemp_text1", @class = "form-control input-sm", style = "width: 150%;" }).Enable(false)
                        <span class="input-group-btn">
                            <a id ="srcOfficeRedemp" href="@Url.Action("SearchOffice", "Global")" data-toggle="modal" data-target="#OfficeRedempModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                        </span>
                        @Html.Kendo().TextBoxFor(model => model.OfficeModel.OfficeName).HtmlAttributes(new { @id = "srcOfficeRedemp_text2", @class = "form-control input-sm", style = "width: 150%;" }).Enable(false)
                    </div>
                </div>
                <!-- End Search Office -->
                <!-- Begin Search CIF -->
                <div class="form-group">
                    <label class="col-sm-3 control-label">No CIF</label>
                    <div class="input-group">
                        @Html.Kendo().TextBoxFor(model => model.CustomerModel.CIFNo).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "srcCIFRedemp_text1" })
                        <span class="input-group-btn">
                            <a id="srcCIFRedemp" href="#display" data-toggle="modal" data-target="#CustomerModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                        </span>
                        @Html.Kendo().TextBoxFor(model => model.CustomerModel.CIFName).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "srcCIFRedemp_text2" }).Enable(false)
                    </div>
                </div>
                <!-- End Search CIF -->
                <!-- Begin Search RefID -->
                <div class="form-group">
                    <label class="col-sm-3 control-label">No Referensi</label>
                    <div class="input-group">
                        @Html.Kendo().TextBoxFor(model => model.ReferensiModel.RefID).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "srcNoRefRedemp_text1" })
                        <span class="input-group-btn">
                            <a id="srcNoRefRedemp" href="#display" data-toggle="modal" data-target="#NoRefModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                        </span>
                        @Html.Kendo().TextBoxFor(model => model.ReferensiModel.RefID).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "srcNoRefRedemp_text2" }).Enable(false)
                    </div>
                </div>
                <!-- End Search RefID -->
            </div>
            <div class="col-md-6">
                <div class="card-box">
                    <div class="row">
                        <!-- Begin Jenis Risk Profile -->
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Jenis Risk Profile</label>
                                <div class="input-group">
                                    @Html.Kendo().TextBox().Name("txtbRiskProfileRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 100%;" }).Enable(false)
                                </div>
                            </div>
                        <!-- End Jenis Risk Profile -->
                        <!-- Begin Last Update Risk Profile -->
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Last Update Risk Profile</label>
                                <div class="input-group">
                                    @(Html.Kendo().DatePicker().Name("dtpRiskProfileRedemp").HtmlAttributes(new { style = "width: 200px;" }).Enable(false))
                                </div>
                            </div>
                        <!-- End Last Update Risk Profile -->
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Begin Input SID -->
                <div class="form-group">
                    <label class="col-sm-3 control-label">SID</label>
                    <div class="input-group">
                        @Html.Kendo().TextBox().Name("textSIDRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 200px;" }).Enable(false)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Umur</label>
                    <div class="input-group">
                        @Html.Kendo().TextBox().Name("txtUmurRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 80px;" }).Enable(false)
                        <label>&nbsp;&nbsp;&nbsp;Tahun</label>
                    </div>
                </div>
                <!-- End Input SID -->
                <!-- Begin Input Shareholder ID -->
                <div class="form-group" hidden="hidden">
                    <label class="col-sm-3 control-label">Shareholder ID</label>
                    <div class="input-group">
                        @Html.Kendo().TextBox().Name("textShareHolderIdRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 300px;" }).Enable(false)
                    </div>
                </div>
                <!-- End Input Shareholder ID -->
            </div>
            <div class="col-md-6">
                <!-- Begin Input Rekening IDR -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Rekening IDR</label>
                        <div class="input-group">
                            @Html.Kendo().TextBox().Name("maskedRekeningRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150px;" }).Enable(false)
                            <span class="input-group-btn"></span>
                            @Html.Kendo().TextBox().Name("textNamaRekeningRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 240px;" }).Enable(false)
                        </div>
                    </div>
                <!-- End Input Rekening IDR -->
                <!-- Begin Input Rekening USD -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Rekening USD</label>
                        <div class="input-group">
                            @Html.Kendo().TextBox().Name("maskedRekeningRedempUSD").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150px;" }).Enable(false)
                            <span class="input-group-btn"></span>
                            @Html.Kendo().TextBox().Name("textNamaRekeningRedempUSD").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 240px;" }).Enable(false)
                        </div>
                    </div>
                <!-- End Input Rekening USD -->
                <!-- Begin Input Rekening -->
                    <div class="form-group" hidden="hidden">
                        <label class="col-sm-3 control-label">Rekening</label>
                        <div class="input-group">
                            @Html.Kendo().TextBox().Name("maskedRekeningRedempMC").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150px;" }).Enable(false)
                            <span class="input-group-btn"></span>
                            @Html.Kendo().TextBox().Name("textNamaRekeningRedempMC").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 240px;" }).Enable(false)
                        </div>
                    </div>
                <!-- End Input Rekening -->
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <!-- Begin No Transaksi -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">No Transaksi</label>
                        <div class="input-group">
                            @Html.Kendo().TextBox().Name("textNoTransaksiRedemp").HtmlAttributes(new { @class = "form-control input-sm", @style = "width:200px" }).Enable(false)
                        </div>
                    </div>
                    <!-- End No Transaksi -->
                    <!-- Begin Tgl Transaksi -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Tgl Transaksi</label>
                        <div class="input-group">
                            @(Html.Kendo().DatePicker().Name("dateTglTransaksiRedemp").HtmlAttributes(new { style = "width: 150px;" }).Enable(false))
                        </div>
                    </div>
                    <!-- End Tgl Transaksi -->
                    <!-- Begin Kode Product -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Kode Produk</label>
                        <div class="input-group col-md-9">
                            @Html.Kendo().TextBoxFor(model => model.ProductModel.ProdCode).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "srcProductRedemp_text1" }).Enable(false)
                            <span class="input-group-btn">
                                <a id="srcProductRedemp" href="#display" data-toggle="modal" data-target="#ProductModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                            </span>
                            @Html.Kendo().TextBoxFor(model => model.ProductModel.ProdName).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 250px;", @id = "srcProductRedemp_text2" }).Enable(false)
                            @Html.Kendo().TextBoxFor(model => model.TransaksiProduct.ProdId).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "ProdIdRedemp", @type = "hidden" })
                            @Html.Kendo().TextBoxFor(model => model.TransaksiProduct.ProdCCY).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "ProdCCYRedemp", @type = "hidden" })
                        </div>
                    </div>
                    <!-- End Kode Product -->
                    <!-- Begin Client Code -->
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Client Code</label>
                            <div class="input-group col-md-9">
                                @Html.Kendo().TextBoxFor(model => model.ClientModel.ClientCode).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "srcClientRedemp_text1" }).Enable(false)
                                <span class="input-group-btn">
                                    <a id="srcClientRedemp" href="#display" data-toggle="modal" data-target="#ClientModal" class="btn btn-default btn-sm btn-search-component src-cif enabled" data-animation="flash">...</a>
                                </span>
                                @Html.Kendo().TextBoxFor(model => model.ClientModel.ClientName).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 250px;", @id = "srcClientRedemp_text2" }).Enable(false)
                                @Html.Kendo().TextBoxFor(model => model.ClientModel.ClientId).HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;", @id = "ClientIdRedemp",  @type = "hidden" })
                            </div>
                        </div>
                    <!-- End Client Code -->
                    <!-- Begin OutStanding Unit -->
                    <div class="form-group">
                        <label class="col-sm-4 control-label">OutStanding Unit</label>
                        <div class="input-group">
                            @Html.Kendo().NumericTextBox().Name("OutstandingUnitRedemp").HtmlAttributes(new { style = "width: 220px;" }).Enable(false).Min(0)
                            @*<input id="OutstandingUnitRedemp" type="text" placeholder="" class="form-control input-sm autonumber" data-a-sep="." data-a-dec="," style="width: 30%;">*@
                        </div>
                    </div>
                    <!-- End OutStanding Unit -->
                    <!-- Begin Jumlah Unit -->
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Jumlah Unit</label>
                        <div class="input-group">
                            @Html.Kendo().NumericTextBox().Name("RedempUnit").HtmlAttributes(new { style = "width: 220px;" }).Enable(false).Min(0).Events(e => { e.Change("onChangeRedempUnit").Spin("onSpinRedempUnit"); })
                            @*<input id="RedempUnit" type="text" placeholder="" class="form-control input-sm autonumber" data-a-sep="." data-a-dec="," style="width: 30%;">*@
                        </div>
                    </div>
                    <!-- End Jumlah Unit -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="input-group">
                            <button id="btnAddRedemp" class="btn btn-default waves-effect waves-light" style="margin-right:10px">
                                <span class="btn-label">
                                    <i class="fa fa-plus"></i>
                                </span>
                                Add
                            </button>
                            <button id="btnEditRedemp" class="btn btn-info waves-effect waves-light" style="margin-right:10px">
                                <span class="btn-label">
                                    <i class="fa fa-edit"></i>
                                </span>
                                Edit
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-6">
                        <div class="checkbox checkbox-custom checkbox-circle">
                            @(Html.Kendo().CheckBox().Name("checkPhoneOrderRedemp").Label("Transaksi melalui Telepon").HtmlAttributes(new { @class = "checkbox checkbox-info checkbox-circle" }).Enable(false))
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="checkbox checkbox-custom checkbox-circle">
                            @Html.Kendo().CheckBox().Name("checkAll").HtmlAttributes(new { @class = "checkbox checkbox-info checkbox-circle" }).Label("All").Enable(false)
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="portlet">
                            <div class="portlet-heading bg-custom">Redemption Fee</div>
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="col-md-1"></label>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="checkbox checkbox-custom checkbox-circle">
                                                    @Html.Kendo().CheckBox().Name("checkFeeEditRedemp").HtmlAttributes(new { @class = "checkbox checkbox-info checkbox-circle" }).Label("Fee Edit").Enable(false)
                                                </div>
                                            </div>                                            
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-md-1"></label>
                                        <div class="form-group">
                                            <div class="input-group">
                                                @(Html.Kendo().DropDownList().Name("_ComboJenisRedemp").HtmlAttributes(new { @style = "width:130px" }).BindTo(new List<SelectListItem>() { new SelectListItem() { Text = "By Nominal", Value = "0" }, new SelectListItem() { Text = "By %", Value = "1" } }).DataTextField("Text").DataValueField("Value").Events(e => { e.Change("_ComboJenisRedemp_SelectedIndexChanged").DataBound("onBound_ComboJenisRedemp"); }))
                                            </div>                                            
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-md-1"></label>
                                        <div class="form-group">
                                            <div class="input-group">       
                                                <span class="input-group-btn"></span>
                                                @Html.Kendo().NumericTextBox().Name("MoneyFeeRedemp").HtmlAttributes(new { style = "width: 160px; margin-right:10px;" }).Enable(false).Min(0).Events(e => { e.Change("onChangeMoneyFeeRedemp").Spin("onSpinMoneyFeeRedemp"); })
                                                <span class="input-group-btn"></span>
                                                <label id="labelFeeCurrencyRedemp" style="margin-right:10px;">IDR</label>
                                                <span class="input-group-btn"></span>
                                                @*@Html.Kendo().TextBox().Name("PercentageFeeRedemp").HtmlAttributes(new { @class = "form-control input-sm", @style = "width:50px" }).Enable(false)*@
                                                @Html.Kendo().NumericTextBox().Name("PercentageFeeRedemp").HtmlAttributes(new { style = "width:160px;margin-right:10px;" }).Enable(false).Min(0)
                                                <span class="input-group-btn"></span>
                                                <label id="_KeteranganFeeRedemp">%</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            <div class="col-md-12" style="padding-bottom:5%">                
                @(Html.Kendo().Grid(Model.ListRedemption)
                                .Name("dataGridViewRedemp")
                                .Columns(columns =>
                                {
                                    columns.Bound(p => p.NoTrx).Width(150).Title("No Transaksi");
                                    columns.Bound(p => p.StatusTransaksi).Width(150).Title("Status");
                                    columns.Bound(p => p.KodeProduk).Width(150).Title("Kode Produk");
                                    columns.Bound(p => p.NamaProduk).Width(300).Title("Nama Produk");
                                    columns.Bound(p => p.ClientCode).Width(150).Title("Client Code");
                                    columns.Bound(p => p.OutstandingUnit).Width(150).Title("Outstanding Unit").Format("{0:###,###.##}");
                                    columns.Bound(p => p.RedempUnit).Width(150).Title("Redemp Unit").Format("{0:###,###.##}");
                                    columns.Bound(p => p.IsRedempAll).Width(150).Title("Redemp All").ClientTemplate("<input type='checkbox' disabled='disabled' " +
                                "# if (IsRedempAll) { #" +
                                "checked='checked'" +
                                "# } #" +
                                "/>");
                                    columns.Bound(p => p.EditFeeBy).Width(150).Title("Edit Fee By");
                                    columns.Bound(p => p.NominalFee).Width(150).Title("NominalFee").Format("{0:###,###.##}");
                                    columns.Bound(p => p.PhoneOrder).Width(150).Title("PhoneOrder").ClientTemplate("<input type='checkbox' disabled='disabled' " +
                                         "# if (PhoneOrder) { #" +
                                        "checked='checked'" +
                                        "# } #" +
                                        "/>");
                                    columns.Bound(p => p.PctFee).Width(150).Title("Percent Fee").Format("{0:###,###.##}");
                                })
                                .Pageable()
                                .Scrollable(s => s.Height(250))
                                .Selectable(selectable => selectable
                                .Mode(GridSelectionMode.Single))
                                .Events(events => events.Change("dataGridViewRedemp_CellClick"))
                )

            </div>
            <div class="col-md-12">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Inputter</label>
                        <div class="input-group">
                            @Html.Kendo().TextBox().Name("txtbInputterRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 300px;" }).Enable(false)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="input-group">
                            <button id="btnDokumenRedemp" href="@Url.Action("Document", "Global" ) " data-toggle="modal" data-target="#DocumentModalRedemp" class="btn btn-default waves-effect waves-light">
                                <span class="btn-label">
                                    <i class="fa fa-search"></i>
                                </span>
                                Cek Dokumen
                            </button>
                        </div>
                    </div>
                    <script>
                        $(function () {
                            $('#btnDokumenRedemp').click(function () {
                                var value = $('#srcNoRefRedemp_text1').val();
                                $(this).attr('href', function () {
                                    return '@Html.Raw(Url.Action("Document", "Global"))?IsEdit=false&TranId=0&IsSwitching=false&IsBooking=false,RefID=' + value;
                                });
                            });
                        });
                    </script>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Seller</label>
                        <div class="input-group col-md-6">
                            @Html.Kendo().TextBoxFor(model => model.ReferentorModel.EMPLID).HtmlAttributes(new { @id = "srcSellerRedemp_text1", @class = "form-control input-sm", style = "width:150%;" }).Enable(false)
                            <span class="input-group-btn">
                                <a id="srcSellerRedemp" href="#display" data-toggle="modal" data-target="#SellerModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                            </span>
                            @Html.Kendo().TextBoxFor(model => model.ReferentorModel.NAME).HtmlAttributes(new { @id = "srcSellerRedemp_text2", @class = "form-control input-sm", style = "width:250px;" }).Enable(false)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Kode WAPERD</label>
                        <div class="input-group col-md-6">
                            @Html.Kendo().TextBoxFor(model => model.WaperdModel.WaperdNo).HtmlAttributes(new { @id = "srcWaperdRedemp_text1", @class = "form-control input-sm", style = "width:150%;" }).Enable(false)
                            <span class="input-group-btn">
                                <a id="srcWaperdRedemp" href="#display" data-toggle="modal" data-target="#WaperdModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                            </span>
                            @Html.Kendo().TextBoxFor(model => model.WaperdModel.WaperdNo).HtmlAttributes(new { @id = "srcWaperdRedemp_text2", @class = "form-control input-sm", style = "width:250px;" }).Enable(false)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Tgl Expire</label>
                        <div class="input-group">
                            @Html.Kendo().TextBox().Name("textExpireWaperdRedemp").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 150%;" }).Enable(false)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">NIK Referrantor</label>
                        <div class="input-group col-md-6">
                            @Html.Kendo().TextBoxFor(model => model.ReferentorModel.EMPLID).HtmlAttributes(new { @id = "srcReferentorRedemp_text1", @class = "form-control input-sm", style = "width:150%;" }).Enable(false)
                            <span class="input-group-btn">
                                <a id="srcReferentorRedemp" href="#display" data-toggle="modal" data-target="#NIKRefModal" class="btn btn-default btn-sm btn-search-component src-cif enabled">...</a>
                            </span>
                            @Html.Kendo().TextBoxFor(model => model.ReferentorModel.NAME).HtmlAttributes(new { @id = "srcReferentorRedemp_text2", @class = "form-control input-sm", style = "width:250px;" }).Enable(false)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Begin Modal -->
<div class="modal fade" id="ErrorRedempModal" tabindex="-1" role="dialog" aria-labelledby="ErrorRedempModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Daftar Error</h4>
            </div>
            <div class="modal-body">
                @(Html.Kendo().Grid<Reksa.Models.TransactionModel.ErrorList>()
                                                                .Name("GridErrorRedemp")
                                                                .Columns(columns =>
                                                                {
                                                                    columns.Bound(m => m.fieldName).Width(200).Title("FieldName");
                                                                    columns.Bound(m => m.description).Width(500).Title("Description");
                                                                })
                                                                .Pageable()
                                                                .Scrollable(s => s.Height(300))
                                                                .Selectable(selectable => selectable
                                                                    .Mode(GridSelectionMode.Single))
                )
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnOKErrorRedemp" class="btn btn-info pull-left" data-dismiss="modal">
                    <span class="glyphicon glyphicon-ok"></span> OK
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="OfficeRedempModal" tabindex="-1" role="dialog" aria-labelledby="OfficeRedempModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>
<div class="modal fade" id="DocumentModalRedemp" tabindex="-1" role="dialog" aria-labelledby="DocumentModalRedempLabel">
    <div class="modal-dialog" style="width:75%;">
        <div class="modal-content"></div>
    </div>
</div>

<!-- End Modal -->

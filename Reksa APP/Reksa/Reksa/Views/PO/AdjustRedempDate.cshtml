
@{
    ViewData["Title"] = "Adjustment Redemption Date";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Adjustment Redemption Date</a>
        </h4>
    </div>
    <div class="panel-body">
        <div class="card-box">
            <!-- Begin Button -->
            <div class="input-group">
                <button id=btnRefresh class="btn btn-default waves-effect waves-light" style="margin-right:10px">
                    <span class="btn-label">
                        <i class="fa fa-refresh"></i>
                    </span>
                    Refresh
                </button>
                <button id="btnEdit" class="btn btn-info waves-effect waves-light" style="margin-right:10px">
                    <span class="btn-label">
                        <i class="fa fa-edit"></i>
                    </span>
                    Edit
                </button>
                <button id="btnSave" style="display:none;margin-right:10px;" class="btn btn-warning waves-effect waves-light">
                    <span class="btn-label">
                        <i class="fa fa-save"></i>
                    </span>
                    Save
                </button>
                <button id="btnCancel" style="display:none;margin-right:10px;" class="btn btn-danger waves-effect waves-light">
                    <span class="btn-label">
                        <i class="fa fa-remove"></i>
                    </span>
                    Cancel
                </button>
            </div>
            <!-- End Button -->
        </div>
        <div class="col-md-12">
            <div class="col-md-6">
                <!-- Begin Client Code -->
                <div class="form-group">
                    <label class="col-sm-4 control-label">Client Code</label>
                    <div class="input-group">
                        @Html.Kendo().TextBox().Name("textBox1").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 200px;" }).Enable(false)
                    </div>
                </div>
                <!-- End Client Code -->
                <!-- Begin Client Name -->
                <div class="form-group">
                    <label class="col-sm-4 control-label">Client Name</label>
                    <div class="input-group">
                        @Html.Kendo().TextBox().Name("textBox2").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 200px;" }).Enable(false)
                    </div>
                </div>
                <!-- End Client Name -->
                <!-- Begin Tran Code -->
                <div class="form-group">
                    <label class="col-sm-4 control-label">Tran Code</label>
                    <div class="input-group">
                        @Html.Kendo().TextBox().Name("textBox3").HtmlAttributes(new { @class = "form-control input-sm", style = "width: 200px;" }).Enable(false)
                    </div>
                </div>
                <!-- End Tran Code -->
            </div>
            <div class="col-md-6">
                <!-- Begin Tran Amount -->
                <div class="form-group">
                    <label class="col-sm-5 control-label">Tran Amount</label>
                    <div class="input-group">
                        @Html.Kendo().NumericTextBox().Name("Money1").HtmlAttributes(new { style = "width: 200px;" }).Enable(false).Min(0)
                    </div>
                </div>
                <!-- End Tran Amount -->
                <!-- Begin Tran Unit -->
                <div class="form-group">
                    <label class="col-sm-5 control-label">Tran Unit</label>
                    <div class="input-group">
                        @Html.Kendo().NumericTextBox().Name("Money2").HtmlAttributes(new { style = "width: 200px;" }).Enable(false).Min(0)
                    </div>
                </div>
                <!-- End Tran Unit -->
                <!-- Begin Settle Date -->
                <div class="form-group">
                    <label class="col-sm-5 control-label">Settle Date</label>
                    <div class="input-group col-sm-4">
                        @(Html.Kendo().DatePicker().Name("dateTimePicker1").HtmlAttributes(new { style = "width: 200px;" }).Enable(false))
                    </div>
                </div>
                <!-- End Settle Date -->
            </div>
        </div>
        <div class="col-md-12">
            <!-- Begin dataGridView1 -->
                    <div id="dataGridView1"></div>
            <!-- End dataGridView1 -->
        </div>
    </div>
</div>
<script src="~/js/reksa.po.adjustredempdate.js"></script>
<script src="~/js/reksa.po.adjustredempdate.events.js"></script>

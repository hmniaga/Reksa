@{
    ViewBag.Title = "Search Product";
    string search = (string)ViewBag.Search;
    string criteria = (string)ViewBag.Criteria;

    Layout = null;
}
<script type="text/javascript">
    function onSearchTrxProductRDB() {
        var value = $("#TrxProductRDBSearchComponentSearchTxt").val();
        var grid = $("#TrxProductRDBSearchComponentGrid").data("kendoGrid");

        var parsedUrl = updateQueryStringParameter(grid.dataSource.transport.options.read.url, "search", value);
        grid.dataSource.transport.options.read.url = parsedUrl;

        grid.dataSource.page(1);
        grid.dataSource.read();
        grid.refresh();
    }

    function updateQueryStringParameter(uri, key, value) {
        var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
        var separator = uri.indexOf('?') !== -1 ? "&" : "?";
        if (uri.match(re)) {
            return uri.replace(re, '$1' + key + "=" + value + '$2');
        }
        else {
            return uri + separator + key + "=" + value;
        }
    }

    function onRowTrxProductRDBSelect(e) {
        var data = this.dataItem(this.select());
        var ProdCode = $.trim(data.ProdCode);
        var ProdName = $.trim(data.ProdName);
        var ProdId = $.trim(data.ProdId);
        var ProdCurr = $.trim(data.ProdCCY);

        $("#TrxProductRDBSelectedCode").val(ProdCode);
        $("#TrxProductRDBSelectedName").val(ProdName);
        $("#TrxProductRDBSelectedId").val(ProdId);
        $("#TrxProductRDBSelectedCurr").val(ProdCurr);
    };

    $("#TrxProductRDBSelectButton").on("click", function () {
        var selectedCode = $("#TrxProductRDBSelectedCode").val();
        var selectedName = $("#TrxProductRDBSelectedName").val();
        var selectedId = $("#TrxProductRDBSelectedId").val();
        var selectedCurr = $("#TrxProductRDBSelectedCurr").val();

        var res = ValidateCurrency(selectedCurr);

        res.success(function (data) {
            if (data.length != 0) {
                $("input[id='srcCurrencyRDB_text2']").val(data[0].CurrencyName);
            } else {
                $("input[id='srcCurrencyRDB_text2']").val('');
            }
        });

        $("input[id='srcProductRDB_text1']").val(selectedCode).change();
        $("input[id='srcProductRDB_text2']").val(selectedName);
        $("input[id='ProdIdRDB']").val(selectedId);
        $("input[id='ProdCCYRDB']").val(selectedCurr);
        $("input[id='srcCurrencyRDB_text1']").val(selectedCurr);
    });

    $("#TrxProductRDBSearchComponentSearchTxt").on("keypress", function (e) {
        var key = e.which;
        if (key == 13)  // the enter key code
        {
            $("#TrxProductRDBSearchComponentSearchBtn").click();
            return false;
        }
    });

    function getData() {
        var Search = "@ViewBag.Search";
        var criter = "@ViewBag.Criteria";
        return {
            search: Search,
            criteria: encodeURIComponent(criter)
        }
    }

    function ValidateCurrency(CurrCode) {
        return $.ajax({
            type: 'GET',
            url: '/Global/ValidateCurrency',
            data: { Col1: CurrCode, Col2: '', Validate: 1 }
        });
    }
</script>
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="modal-body">
        @(Html.Kendo().Grid<Reksa.Models.TransaksiProduct>()
                                            .Name("TrxProductRDBSearchComponentGrid")
                                            .Columns(columns =>
                                            {
                                                columns.Bound(m => m.ProdCode).Width(100).Title("Product Code");
                                                columns.Bound(m => m.ProdName).Width(300).Title("Product Name");
                                                columns.Bound(m => m.ProdId).Hidden();
                                                columns.Bound(m => m.ProdCCY).Hidden();
                                            })
                                            .ToolBar(toolbar =>
                                            {
                                                toolbar.ClientTemplateId("GridToolbarTemplate");
                                            })
                                            .Events(events => events.Change("onRowTrxProductRDBSelect"))
                                            .Pageable()
                                            .Scrollable()
                                            .Selectable(selectable => selectable
                                                .Mode(GridSelectionMode.Single))
                                            .DataSource(dataSource => dataSource
                                                .Ajax()
                                                .PageSize(20)
                                                .Model(model =>
                                                {
                                                    model.Id(m => m.ProdCode);
                                                })
                                                .Read(read =>
                                                read.Action("SearchTrxProductData", "Global").Data("getData"))
                                            )
        )


        <script id="GridToolbarTemplate">
        <div class="toolbar">
            @(Html.Kendo().TextBox().Name("TrxProductRDBSearchComponentSearchTxt").Value(search).ToClientTemplate())
            @(Html.Kendo().Button()
                            .HtmlAttributes(new { type = "button" })
                            .Name("TrxProductRDBSearchComponentSearchBtn")
                            .Content("Search")
                            .Events(ev => ev.Click("onSearchTrxProductRDB")).ToClientTemplate()
            )
        </div>
        </script>

        <input type="hidden" id="TrxProductRDBSelectedCode" name="TrxProductRDBSelectedCode" value="" />
        <input type="hidden" id="TrxProductRDBSelectedName" name="TrxProductRDBSelectedName" value="" />
        <input type="hidden" id="TrxProductRDBSelectedId" name="TrxProductRDBSelectedCId" value="" />
        <input type="hidden" id="TrxProductRDBSelectedCurr" name="TrxProductRDBSelectedCurr" value="" />
        
    </div>
    <div class="modal-footer">
        <button type="submit" id="TrxProductRDBSelectButton" class="btn btn-primary pull-left" data-dismiss="modal">
            <span class="glyphicon glyphicon-ok"></span> Select
        </button>
        <button type="submit" class="btn btn-warning pull-left" data-dismiss="modal">
            <span class="glyphicon glyphicon-remove"></span> Cancel
        </button>
    </div>
</div>

@{
    ViewBag.Title = "Search CIF";
    string search = (string)ViewBag.Search;
    string criteria = (string)ViewBag.Criteria;

    Layout = null;
}
<script type="text/javascript">
    function onSearchCustomerSwc() {
        var value = $("#CustomerSwcSearchComponentSearchTxt").val();
        var grid = $("#CustomerSwcSearchComponentGrid").data("kendoGrid");

        var parsedUrl = updateQueryStringParameter(grid.dataSource.transport.options.read.url, "search", value);
        grid.dataSource.transport.options.read.url = parsedUrl;

        grid.dataSource.page(1);
        grid.dataSource.read();
        grid.refresh();
    }

    function updateQueryStringParameter(uri, key, value) {
        var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
        var separator = uri.indexOf('?') !== -1 ? "&" : "?";
        if (uri.match(re)) {
            return uri.replace(re, '$1' + key + "=" + value + '$2');
        }
        else {
            return uri + separator + key + "=" + value;
        }
    }

    function onRowCustomerSwcSelect(e) {
        var data = this.dataItem(this.select());
        var CIFNo = $.trim(data.CIFNo);
        var CIFName = $.trim(data.CIFName);
        var NasabahId = $.trim(data.NasabahId);
        
        $("#CustomerSwcSelectedCode").val(CIFNo);
        $("#CustomerSwcSelectedName").val(CIFName);
        $("#CustomerSwcSelectedId").val(NasabahId);
    };

    $("#CustomerSwcSelectButton").on("click", function () {
        var selectedCode = $("#CustomerSwcSelectedCode").val();
        var selectedName = $("#CustomerSwcSelectedName").val();
        var selectedId = $("#CustomerSwcSelectedId").val();

        $("input[id='srcCIFSwc_text1']").val(selectedCode).change();
        $("input[id='srcCIFSwc_text2']").val(selectedName);
        $("input[name='CustomerModel.NasabahId']").val(selectedId);

    });

    $("#CustomerSwcSearchComponentSearchTxt").on("keypress", function (e) {
        var key = e.which;
        if (key == 13)  // the enter key code
        {
            $("#CustomerSwcSearchComponentSearchBtn").click();
            return false;
        }
    });
</script>
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="modal-body">
        @(Html.Kendo().Grid<Reksa.Models.CustomerModel>()
                    .Name("CustomerSwcSearchComponentGrid")
                    .Columns(columns =>
                    {
                        columns.Bound(m => m.CIFNo).Width(100).Title("CIF Number");
                        columns.Bound(m => m.CIFName).Width(150).Title("CIF Name");
                        columns.Bound(m => m.NasabahId).Hidden();
                    })
                    .ToolBar(toolbar =>
                    {
                        toolbar.ClientTemplateId("GridToolbarTemplate");
                    })
                    .Events(events => events.Change("onRowCustomerSwcSelect"))
                    .Pageable()
                    .Scrollable()
                    .Selectable(selectable => selectable
                        .Mode(GridSelectionMode.Single))
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .PageSize(20)
                        .Model(model =>
                        {
                            model.Id(m => m.CIFNo);
                        })
                        .Read(read => read.Action("SearchCustomerData", "Global", new { search = search, criteria = criteria }))
                    )
        )

        <script id="GridToolbarTemplate">
        <div class="toolbar">
            @(Html.Kendo().TextBox().Name("CustomerSwcSearchComponentSearchTxt").Value(search).ToClientTemplate())
            @(Html.Kendo().Button()
                            .HtmlAttributes(new { type = "button" })
                            .Name("CustomerSwcSearchComponentSearchBtn")
                            .Content("Search")
                            .Events(ev => ev.Click("onSearchCustomerSwc")).ToClientTemplate()
            )
        </div>
        </script>

        <input type="hidden" id="CustomerSwcSelectedCode" name="CustomerSwcSelectedCode" value="" />
        <input type="hidden" id="CustomerSwcSelectedName" name="CustomerSwcSelectedName" value="" />
        <input type="hidden" id="CustomerSwcSelectedId" name="CustomerSwcSelectedId" value="" />
    </div>
    <div class="modal-footer">
        <button type="submit" id="CustomerSwcSelectButton" class="btn btn-primary pull-left" data-dismiss="modal">
            <span class="glyphicon glyphicon-ok"></span> Select
        </button>
        <button type="submit" class="btn btn-warning pull-left" data-dismiss="modal">
            <span class="glyphicon glyphicon-remove"></span> Cancel
        </button>
    </div>
</div>

@using System.Data
@model DataSet
@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["ReportCode"]</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <script src="~/lib/assets/js/jquery.min.js"></script>
    <script src="~/lib/assets/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="">
        <h1 class="text-center" style="padding-bottom:50px">@ViewData["ReportName"]</h1>
        <h6>Periode : @ViewData["PeriodStart"] - @ViewData["PeriodEnd"]</h6>
        <h6>Product Code : @ViewData["ProdCode"]</h6>
        <h6>Mata Uang : @ViewData["MataUang"]</h6>
        <h6>Tipe Produk : @ViewData["TipeProduk"]</h6>
        <br>
        <table class="table table-striped m-0" style="font-size:9px">
            <thead>
                <tr>
                    <th>Value Date</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow item in Model.Tables[0].Rows)
                {
                <tr>
                    <td>@(item["ValueDate"].ToString() != "" ? DateTime.Parse(@item["ValueDate"].ToString()).ToString("dd/MM/yyyy") : "")</td>
                    <td>@(item["Value"].ToString() != "" ? decimal.Parse(item["Value"].ToString()).ToString("###,###.##") : "0")</td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html> 
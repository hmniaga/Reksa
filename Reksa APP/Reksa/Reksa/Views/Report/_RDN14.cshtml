@using System.Data
@model DataSet
@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["ReportCode"]</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <script src="~/lib/assets/js/jquery.min.js"></script>
    <script src="~/lib/assets/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="">
        <h1 class="text-center" style="padding-bottom:50px">@ViewData["ReportName"]</h1>
        <h6>Periode : @ViewData["PeriodStart"] - @ViewData["PeriodEnd"]</h6>
        <h6>Product Code : @ViewData["ProdCode"]</h6>
        <h6>Mata Uang : @ViewData["MataUang"]</h6>
        <h6>Regional : @ViewData["RegionalName"]</h6>
        <br>
        <table class="table table-striped m-0" style="font-size:9px">
            <thead>
                <tr>
                    <th>City</th>
                    <th>Agent Description</th>
                    <th>Agent Code</th>
                    <th>Total Trans</th>
                    <th>Total Unit</th>
                    <th>Total Nominal</th>
                    <th>Fee</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow item in Model.Tables[0].Rows)
                {
                <tr>
                    <td>@item["City"]</td>
                    <td>@item["AgentDesc"]</td>
                    <td>@item["AgentCode"]</td>
                    <td>@(item["TotalTrans"].ToString() != "" ? decimal.Parse(item["TotalTrans"].ToString()).ToString("###,###.##") : "0")</td>
                    <td>@(item["TotalUnit"].ToString() != "" ? decimal.Parse(item["TotalUnit"].ToString()).ToString("###,###.##") : "0")</td>
                    <td>@(item["TotalNom"].ToString() != "" ? decimal.Parse(item["TotalNom"].ToString()).ToString("###,###.##") : "0")</td>
                    <td>@(item["Fee"].ToString() != "" ? decimal.Parse(item["Fee"].ToString()).ToString("###,###.##") : "0")</td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html> 